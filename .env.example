# Auth strategy: bearer | hmac | jwt
SECURE_TRANSFER_AUTH=bearer

# --- Bearer Auth ---
# A long random string. Generate with: php -r "echo bin2hex(random_bytes(64));"
SECURE_TRANSFER_TOKEN=your_long_random_token_here

# --- HMAC Auth ---
# Shared secret between Server A and Server B
# Generate with: php -r "echo bin2hex(random_bytes(64));"
SECURE_TRANSFER_HMAC_SECRET=your_hmac_secret_here

# --- JWT Auth ---
SECURE_TRANSFER_JWT_SECRET=your_jwt_secret_here
SECURE_TRANSFER_JWT_ISSUER=my-transfer-client

# --- Storage ---
# Absolute path. MUST be outside public/. Default is Laravel's storage/secure-transfers/
SECURE_TRANSFER_STORAGE_PATH=/var/www/storage/secure-transfers

# Max file size in bytes (default: 100MB = 104857600)
SECURE_TRANSFER_MAX_SIZE=104857600

# --- Logging ---
# Laravel log channel name
SECURE_TRANSFER_LOG_CHANNEL=default
